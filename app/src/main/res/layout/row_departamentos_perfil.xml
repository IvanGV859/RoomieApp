<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#16235A"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_nombreDepaPerfil"
                android:text="Nombre: "
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_descripPerfil"
                android:text="Descripcion: "
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_coloniaPerfil"
                android:text="Colonia: "
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_municipioPerfil"
                android:text="Municipio: "
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_costoPerfil"
                android:text="$ "
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/bt_editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_editar_depa" />

            <Button
                android:id="@+id/bt_eliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_eliminar"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>