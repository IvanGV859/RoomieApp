<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Buscar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5sp">

        <include
            layout="@layout/main_toolbar"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Departamentos"
            android:textColor="#16235A"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nombreDepa_FB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del departamento: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_municipio_FB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Municipio: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_colonia_FB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colonia: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_descripcion_FB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_costo_FB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costo por mes: "
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F2EAED">

        <include
            layout="@layout/main_nav_drawer_buscar"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>